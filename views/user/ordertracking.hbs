        {{#if (eq status 'scheduled')}}button-blue{{else}}
        {{#if (eq status 'pending')}}button-yellow{{else}}
        {{#if (eq status 'canceled')}}button-red{{else}}
        {{#if (eq status 'returned')}}button-yellow{{else}}
		{{#if (eq status 'payment-pending')}}button-red{{else}}
        {{#if (eq status 'delivered')}}button-green{{else}}
        {{#if (eq status 'shipped')}}button-purple{{/if}}{{/if}}
        {{/if}}{{/if}}{{/if}}{{/if}}{{/if}}">
							{{status}}
						</span>
                            <div class="status-message" id="statusMessage"></div>
                            <div style="font-size: large;" class="status-header">Item : {{this.productId.name}}</div>

                            <div class="step-price"><b>Price: ${{multiply this.quantity this.priceWithDiscount}}</b></div>
                            <div class="step-quantity"><b>Quantity: {{this.quantity}}</b></div>
                        </div>
                        <hr>
                        {{/each}}

                        <script>
                            // Function to determine the status message
                            function getStatusMessage(status) {
                                switch (status) {
                                    case 'scheduled':
                                        return 'Your order is scheduled for delivery.';
                                    case 'pending':
                                        return 'Your order is pending and will be processed soon.';
                                    case 'delivered':
                                        return 'The order has been delivered successfully.';
                                    case 'canceled':
                                        return 'The order has been canceled.';
                                    case 'shipped':
                                        return 'Your order is on the way!';
                                    default:
                                        return 'Unknown order status.';
                                }
                            }  
                    </div >
                        // Example: Replace this with your actual order status from the server
                        const orderStatus = "{{order.status}}";

                            // Update the status message dynamically
                            document.getElementById('statusMessage').innerText = getStatusMessage(orderStatus);
                        </script>


