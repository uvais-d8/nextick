                    <script>
                        function getStatusMessage(status) {
                            let message = '';
                            let color = '';

                            switch (status) {
                                case 'scheduled':
                                    message = 'Your order is scheduled for delivery.';
                                    color = 'blue';
                                    break;
                                case 'payment-pending':
                                    message = 'Your order payment is pending. Please retry your payment soon.';
                                    color = 'orange';
                                    break;
                                case 'delivered':
                                    message = 'The order has been delivered successfully.';
                                    color = 'green';
                                    break;
                                case 'canceled':
                                    message = 'The order has been canceled.';
                                    color = 'red';
                                    break;
                                case 'shipped':
                                    message = 'Your order is on the way !';
                                    color = 'purple';
                                    break;
                                case 'returned':
                                    message = 'Your order is returned after delivery !';
                                    color = 'orange';
                                    break;
                                default:
                                    message = 'Unknown order status.';
                                    color = 'gray';
                                    break;
                            }

                            return { message: message, color: color };
                        }

                        const orderStatus = "{{order.status}}";
                        const statusDetails = getStatusMessage(orderStatus);

                        const statusMessageElement = document.getElementById('statusMessage');
                        statusMessageElement.innerText = statusDetails.message;
                        statusMessageElement.style.color = statusDetails.color;
