        }



        footer {
            background-color: #333;
            color: #fff;
            text-align: center;
            padding: 1rem 0;
            margin-top: 2rem;
        }

        @media (max-width: 768px) {
            .profile-header {
                flex-direction: column;
                text-align: center;
            }

            .order {
                flex-direction: column;
                align-items: flex-start;
            }

            .order-status {
                margin-top: 0.5rem;
            }
        }

        * {
            margin: 0;
            padding: 0;
