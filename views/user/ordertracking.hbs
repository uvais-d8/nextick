        }

        .status-text {
            color: #22c55e;
            font-weight: 500;
        }

        .timeline {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin: 2rem 0;
            position: relative;
            padding: 0 1rem;
        }

        .timeline::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 50px;
            right: 50px;
            height: 2px;
            background: #22c55e;
            transform: translateY(-50%);
        }

        .step {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 0.5rem;
            z-index: 1;
        }

        .step-icon {
            width: 40px;
