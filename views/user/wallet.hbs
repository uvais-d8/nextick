        <body>



            <div class="wallet-container">
                <header class="wallet-header">
                    <h1>User Wallet</h1>
                    <p>Manage your balance and transactions</p>
                </header>

                <section class="wallet-balance">
                    <h2>Balance</h2>
                    <div class="balance">
                        <span>₹</span><span>{{balance}}</span>
                    </div>
                </section>

                {{#if transactions.length}} <!-- Check if there are transactions -->
                <section class="wallet-transactions">
                    <h2>Transactions</h2>
                    <table>
                        <thead>
                            <tr>
                                <th>Transaction Type</th>
                                <th>Amount</th>
                                <th>Description</th>
                                <th>Date</th>
                            </tr>
                        </thead>
                        <tbody id="transaction-list">
                            {{#each transactions}}
                            <tr>
                                <td> {{this.type}} </td>
                                <td style="color: green;font-weight:bold"> ₹{{this.amount}} </td>
                                <td>{{this.description}}</td>
                                <td> {{formatDate this.date}} </td>
                            </tr>
                            {{/each}}
                        </tbody>
                    </table>
                </section>
                {{else}} <!-- If no transactions exist, show only the message -->
                <p style="color: red;">No transactions available</p>
                {{/if}}
            </div>


