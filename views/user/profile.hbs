        <script>document.getElementById("saveNameButton").addEventListener("click", async () => {
                const newName = document.getElementById("newName").value;
                const newPhone = document.getElementById("newPhone").value;
                const userId = document.getElementById('userId').textContent;

                // Validate phone number
                const phoneRegex = /^[0-9]{10}$/;
                if (newPhone && !phoneRegex.test(newPhone)) {
                    document.getElementById("phoneError").style.display = "block";
                    return;
                } else {
                    document.getElementById("phoneError").style.display = "none";
                }

                if (!newName) {
                    alert("Please enter a new username.");
                    return;
                }

                try {
                    const response = await fetch("/updateUsername", {
                        method: "POST",
                        headers: {
                            "Content-Type": "application/json"
                        },
                        body: JSON.stringify({ userId, newName, newPhone })
                    });

                    const result = await response.json();
                    console.log("Backend Response:", result);

                    if (result.error) {
                        alert(result.error);
                    } else {
                        console.log("Update successful, redirecting...");
                        window.location.href = '/profile'; // Replace with your profile page URL
                    }
                } catch (error) {
                    console.log("Error:", error);
                }
            });
