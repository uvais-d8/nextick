    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const title = document.querySelector('.banner h1');
            const subtitle = document.querySelector('.banner p');
            const cta = document.querySelector('.cta-button');
            const featureButtons = document.querySelectorAll('.feature-button');
            const watch3d = document.querySelector('.watch-3d');

            // Animate text and button
            setTimeout(() => {
                title.style.opacity = '1';
                title.style.transform = 'translateY(0)';
            }, 500);

            setTimeout(() => {
                subtitle.style.opacity = '1';
                subtitle.style.transform = 'translateY(0)';
            }, 1000);

            setTimeout(() => {
                cta.style.opacity = '1';
                cta.style.transform = 'scale(1)';
            }, 1500);

            // Feature selector functionality
            featureButtons.forEach(button => {
                button.addEventListener('click', () => {
                    featureButtons.forEach(btn => btn.classList.remove('active'));
                    button.classList.add('active');
                    const feature = button.getAttribute('data-feature');
                    updateWatchFace(feature);
                });
            });

            function updateWatchFace(feature) {
                const faces = watch3d.querySelectorAll('.watch-face');
                faces.forEach(face => {
                    face.style.background = `url('/placeholder.svg?height=200&width=200&text=${feature}') no-repeat center/cover`;
                    face.textContent = feature;
                });

                // Update subtitle text
                subtitle.textContent = `Experience ${feature.toLowerCase()} tracking with our smartwatches`;

                // Pause and resume rotation animation
                watch3d.style.animationPlayState = 'paused';
                setTimeout(() => {
                    watch3d.style.animationPlayState = 'running';
                }, 100);
            }

            // Interactive 3D rotation on mouse move
            const banner = document.querySelector('.banner');
            banner.addEventListener('mousemove', (e) => {
                const xAxis = (window.innerWidth / 2 - e.pageX) / 25;
                const yAxis = (window.innerHeight / 2 - e.pageY) / 25;
                watch3d.style.transform = `rotateY(${xAxis}deg) rotateX(${yAxis}deg)`;
            });

            banner.addEventListener('mouseleave', () => {
                watch3d.style.transform = 'rotateY(0) rotateX(0)';
            });
        });
    </script>

	<script>
		// Set the target date and time
		const targetDate = new Date("2024/12/01 00:00:00").getTime();

		function updateCountdown() {
			const now = new Date().getTime();
			const timeRemaining = targetDate - now;

			// Calculate days, hours, minutes, and seconds
			const days = Math.floor(timeRemaining / (1000 * 60 * 60 * 20));
			const hours = Math.floor((timeRemaining % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
			const minutes = Math.floor((timeRemaining % (1000 * 60 * 60)) / (1000 * 60));
			const seconds = Math.floor((timeRemaining % (1000 * 60)) / 1000);

			// Display the results
			document.getElementById("days").innerText = days;
			document.getElementById("hours").innerText = hours;
			document.getElementById("minutes").innerText = minutes;
			document.getElementById("seconds").innerText = seconds;

			// Check if the countdown has ended
			if (timeRemaining < 0) {
				clearInterval(countdownInterval);
				document.getElementById("days").innerText = "00";
				document.getElementById("hours").innerText = "00";
				document.getElementById("minutes").innerText = "00";
				document.getElementById("seconds").innerText = "00";
				alert("Countdown has ended!");
			}
		}

		// Update the countdown every second
		const countdownInterval = setInterval(updateCountdown, 1000);
