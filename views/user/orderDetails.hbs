        <div class="mcontainer">
            <div class="mheader">Order Details</div>

            <a href="/orderss"><button class="mback">Back</button></a>

            <!-- Order Information -->
            <div class="msection order-info">
                <div class="msection-title">Order Information</div>
                <p><span style="font-weight: 500;">Order Date:</span> {{formatDate order.time}}</p>

            </div>

            <!-- User Information -->
            <div class="msection user-info">
                <div class="msection-title">User Information</div>
                <p><span style="font-weight: 500;">Shipping Address:</span> {{order.shippingAddress.address}}</p>
            </div>

            <!-- Products Ordered -->
            <div class="msection">
                <div class="msection-title">Products Details</div>
                <table class="mproducts-table">
                    <tbody>
                        <tr>
                            <p>Product name: <b>{{product.productId.name}}</b></p>
                            <p>{{product.productId.description}}</p>
                            <td><b>Quantity: {{product.quantity}}</b></td>
                            <td>
                                <p>Price:
                                    {{#if product.priceWithDiscount}}
                                    <del style="color: red;">₹{{product.productId.price}}</del>
                                    <b>₹{{product.priceWithDiscount}}</b>
                                    {{else}}
                                    ₹{{product.productId.price}}
                                    {{/if}}
                                </p>
                            </td>
                            {{!-- <td><b>Total Price: ₹ {{multiply product.price product.quantity}}</b></td> --}}
                            <td>
                                <p>Price:
                                    {{#if product.priceWithDiscount}}
                                    <del style="color: red;">₹{{multiply product.quantity product.productId.price}}</del>
                                    <b>₹{{multiply product.priceWithDiscount product.quantity}}</b>
                                    {{else}}
                                    ₹{{multiply product.quantity product.productId.price}}
                                    {{/if}}
                                </p>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <!-- Payment Information -->
            <div class="msection payment-info">
                <div class="msection-title">Payment Information</div>
                <p><span>Payment Method:</span> <b>{{order.paymentMethod}}</b></p>
                {{!-- {{#if order.discountAmount}}
                <p><span>Discount:</span> ₹{{order.discountAmount}}</p>
                <p><span>Final Amount:</span> ₹{{order.total - order.discountAmount}}</p>
                {{/if}} --}}
            </div>

            <!-- Order Status -->
            <div class="msection order-status">
                <div class="msection-title">Order Status</div>
                <p><span>Current Status:</span> <span class="mstatus {{product.status}}">{{product.status}}</span></p>
