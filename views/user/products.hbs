">
							<img src="/{{this.images.[0]}}" class="card-img-top" alt="{{this.name}}"
								style="height: 200px; object-fit: cover;">
							<div style="background-color: rgb(255, 255, 255);border-radius:6px;box-shadow;"
								class="card-body">
								<h5 class="card-title">{{this.name}}</h5>
								<p class="card-text">Category: {{this.category}}</p>

								<!-- Price and Discount -->
								<p class="card-text">
									Price: ₹<span>{{this.price}}</span>
									{{#if this.discount}}
									<span class="discount">(Discount: ₹{{this.discount}})</span>
									{{/if}}
								</p>

								<!-- Stock Information -->
								<p class="card-text stock">
									Stock:
									{{#if this.stock}}
									<span style="color:green;" class="in-stock">{{this.stock}} Available</span>
									{{else}}
									<span style="color: RED;" class="out-of-stock">Out of Stock</span>
									{{/if}}
								</p>

								<!-- Ratings -->
								<p class="card-text">
									Rating:
									<span class="rating">
										{{#each this.rating}}★{{/each}}
									</span>
									<span class="review-count">({{this.reviews.length}} Reviews)</span>
								</p>
							</div>
						</div>
					</a>
				</div>
				{{/each}}
</div>
