		<script>
			document.addEventListener("DOMContentLoaded", () => {
				const applyFilters = () => {
					const showOutOfStock = document.querySelector(".filter-buttons a.active")?.getAttribute("data-value") || "";
					const minPrice = document.getElementById("min-price").value || "";
					const maxPrice = document.getElementById("max-price").value || "";
					const category = document.getElementById("category-filter").value || "all";
					const rating = document.getElementById("rating-filter").value || "all";

					// Construct the query string
					const queryParams = new URLSearchParams({
						showOutOfStock,
						minPrice,
						maxPrice,
						category,
						rating,
					});

					// Reload page with updated query params
					window.location.href = `/filtered?${queryParams.toString()}`;
				};

				// Event Listeners
				document.querySelectorAll(".filter-buttons a").forEach(button => {
					button.addEventListener("click", e => {
						e.preventDefault();
						document.querySelectorAll(".filter-buttons a").forEach(btn => btn.classList.remove("active"));
						button.classList.add("active");
						applyFilters();
					});
				});

				document.getElementById("filter-price-button").addEventListener("click", applyFilters);

				document.getElementById("category-filter").addEventListener("change", applyFilters);

				document.getElementById("rating-filter").addEventListener("change", applyFilters);
			});

		</script>
		<script>
			function liveSearch() {
				const query = document.getElementById('searchInput').value;

				// Only perform search if there's at least one character
				if (query.length > 0) {
					fetch(`/search?query=${query}`)
						.then(response => response.json())  // Assuming the server responds with JSON
						.then(data => {
							const resultsDiv = document.getElementById('live-search-results');
							resultsDiv.innerHTML = '';  // Clear previous results

							if (data.length > 0) {
								data.forEach(item => {
									const resultItem = document.createElement('div');
									resultItem.textContent = item.name; // Assuming item has a 'name' property
									resultsDiv.appendChild(resultItem);
								});
							} else {
								resultsDiv.innerHTML = 'No results found.';
							}
						})
						.catch(error => console.error('Error fetching search results:', error));
				} else {
					document.getElementById('live-search-results').innerHTML = '';
				}
			}
		</script>
		<script>
				// Event Handlers
				document.getElementById('filter-price-button').addEventListener('click', () => {
					const minPrice = document.getElementById('min-price').value || 0;
					const maxPrice = document.getElementById('max-price').value || 10000;
					applyFilters(`/filtered?minPrice=${minPrice}&maxPrice=${maxPrice}`);
				});

				document.getElementById('category-filter').addEventListener('change', (e) => {
					const category = e.target.value;
					applyFilters(`/filtered?category=${category}`);
				});

				document.getElementById('rating-filter').addEventListener('change', (e) => {
					const rating = e.target.value;
					applyFilters(`/filtered?rating=${rating}`);
				});

				function applyFilters(url) {
					window.location.href = url; // Redirect to the filtered URL
				}
