<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>OTP Verification</title>
    <link rel="stylesheet" href="/user/otp-verification.css">
    <link rel="shortcut icon" type="image/png" href="/assets/img/favicon.png">

    <style>
        body {
            background-color: rgba(194, 121, 26, 0.87);
        }

        .timer {
            font-size: 18px;
            margin: 10px 0;
        }

        .resend-otp.hidden {
            display: none;
        }

        .otp-input {
            display: flex;
            justify-content: center;
            gap: 10px;
        }

        .otp-box {
            width: 40px;
            height: 40px;
            text-align: center;
            font-size: 24px;
            border: 1px solid #ffffff;
            border-radius: 5px;
        }
    </style>
</head>

<body>
    <div class="otp-container" style="background-color:rgb(234, 234, 234)">
        <h2 style="color:black; font-size:32px">OTP Verification</h2>
        <p style="color:rgb(38, 38, 38); width: 700px;height:100px;font-size:14px">Please enter the OTP sent to your
            registered email address.</p>
        <input style="background-color:rgb(236, 236, 236);color:red;font-size:14px;font-weight:bold;border-width:0px"
            id="message" value="{{message}}" type="text"></p>

        <!-- Form with OTP Inputs -->
<form id="otpForm" action="/verify-otp" method="POST" onsubmit="updateOtpValue()">
    <div class="otp-input">
        <input type="text" maxlength="1" class="otp-box" required oninput="moveToNext(this)">
        <input type="text" maxlength="1" class="otp-box" required oninput="moveToNext(this)">
        <input type="text" maxlength="1" class="otp-box" required oninput="moveToNext(this)">
        <input type="text" maxlength="1" class="otp-box" required oninput="moveToNext(this)">
        <input type="text" maxlength="1" class="otp-box" required oninput="moveToNext(this)">
        <input type="text" maxlength="1" class="otp-box" required oninput="moveToNext(this)">
    </div>
    <input type="hidden" name="otp" id="otp" required>

            <div id="timer" style="font-size: 14px; margin-bottom: 10px;margin-top:15px">Resend OTP in <span
                    id="countdown">30</span> seconds</div>

            
            <button style="background-color:rgba(255, 145, 0, 0.944);color:rgb(0, 0, 0)" type="submit"
                id="verifyButton"><b>Verify OTP</b></button>
        </form>

        <!-- Resend OTP Button -->
        <form action="/resend-otp" method="post" id="resendForm" style="display: none;">
            <button style="background-color: rgba(229, 226, 221, 0.944); color: black;margin-top:15px" type="submit">
                <b>Resend OTP</b>
            </button>
        </form>

        <script>
            // Timer Configuration
            const countdownElement = document.getElementById('countdown');
            const resendForm = document.getElementById('resendForm');
            let timer = 30; // Set the timer in seconds

            // Function to update the countdown every second
            const interval = setInterval(() => {
                timer--;

                if (timer > 0) {
                    // Update the timer display
                    countdownElement.textContent = timer;
                } else {
                    // Stop the timer
                    clearInterval(interval);

                    // Hide the timer and show the resend button
                    document.getElementById('timer').style.display = 'none';
                    resendForm.style.display = 'block';
                } 
            }, 1000); // Update every second
        </script>

        <script>
            // Function to move to the next input field
            function moveToNext(currentInput) {
                if (currentInput.value.length === 1) {
                    const nextInput = currentInput.nextElementSibling;
                    if (nextInput) {
                        nextInput.focus();
                    }
                }

            }
            // Function to update the hidden input value
            function updateOtpValue() {
                const otpInputs = document.querySelectorAll('.otp-box');
                const otpArray = Array.from(otpInputs).map(input => input.value);
                document.getElementById('otp').value = otpArray.join('');
            }
            setTimeout(() => {
                const messageElement = document.getElementById('message');
                if (messageElement) {
                    messageElement.remove(); // Removes the input field from the DOM
                }
            }, 2000); 
        </script>
</body>

</html>