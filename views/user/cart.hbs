									<td class="product-quantity">
										<button type="button"
											style="border-width: 0px;border-radius:3px;background-color:rgb(255, 74, 71);width:20px"
											onclick="updateQuantity('{{this._id}}', -1)">-</button>
										<input style="width: 70px;height:30px" type="number" id="quantity-{{this._id}}"
											value="{{this.quantity}}" min="1" max="11" readonly>
										<button type="button"
											style="border-width: 0px;border-radius:3px;background-color:rgb(71, 255, 111);width:20px"
											onclick="updateQuantity('{{this._id}}', 1)">+</button>
									</td>
									<input type="hidden" name="quantity" value="{{subtract this.quantity 1}}">
									<input type="hidden" name="quantity" value="{{add this.quantity 1}}">

									<td class="product-total">{{multiply this.productId.price this.quantity}}</td>

								</tr>
								{{/each}}
