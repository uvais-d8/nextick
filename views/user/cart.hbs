	<script>
		function updateQuantity(cartId, change) {
			// Get the current quantity
			const quantityInput = document.getElementById(`quantity-${cartId}`);
			let currentQuantity = parseInt(quantityInput.value);

			// Calculate the new quantity
			let newQuantity = currentQuantity + change;

			// Validation: Ensure the quantity stays within the valid range (1 to 10)
			if (newQuantity > 10) {
				Swal.fire({
					icon: "error",
					title: "Limit Exceeded",
					text: "You cannot add more than 10 items of this product.",
					confirmButtonColor: "#d33",
					confirmButtonText: "Okay",
				});
				return; // Exit function to prevent further execution
			} else if (newQuantity < 1) {
				Swal.fire({
					icon: "warning",
					title: "Minimum Quantity Reached",
					text: "You must have at least 1 item in your cart.",
					confirmButtonColor: "#d33",
					confirmButtonText: "Okay",
				});
				return; // Exit function to prevent further execution
			}

			// Now, we fetch the current stock of the product from the server
			fetch(`/cart/${cartId}/getProductStock`)
				.then((response) => response.json())
				.then((data) => {
					const availableStock = data.stock; // Assuming the server returns { stock: <number> }

					// Check if the new quantity is available in stock
					if (newQuantity > availableStock) {
						Swal.fire({
							icon: "error",
							title: "Stock Limit Exceeded",
							text: `Only ${availableStock} items are available in stock.`,
							confirmButtonColor: "#d33",
							confirmButtonText: "Okay",
						});
						return; // Exit function if quantity exceeds stock
					}

					// Update the input value with the new quantity
					quantityInput.value = newQuantity;

					// Make an AJAX call to update the cart on the server
					fetch(`/cart/${cartId}/updateQuantity`, {
						method: 'POST',
						headers: {
							'Content-Type': 'application/json',
						},
						body: JSON.stringify({ quantity: newQuantity }),
					})
						.then((response) => {
							if (response.ok) {
								console.log("Cart updated successfully.");
							} else {
								throw new Error("Failed to update cart.");
							}
						})
						.catch((error) => {
							console.error("Error:", error);
							Swal.fire({
								icon: "error",
								title: "Update Failed",
								text: "Unable to update the cart. Please try again.",
								confirmButtonColor: "#d33",
								confirmButtonText: "Okay",
							});
						});
				})
				.catch((error) => {
					console.error("Error fetching product stock:", error);
					Swal.fire({
						icon: "error",
						title: "Error",
						text: "Unable to fetch product stock. Please try again.",
						confirmButtonColor: "#d33",
						confirmButtonText: "Okay",
					});
				});
		}

	</script>
	<script>
		document.querySelectorAll('input[name="quantity"]').forEach((input) => {
			input.addEventListener('change', (event) => {
				const row = event.target.closest('tr');
				const price = parseFloat(row.querySelector('.product-price').innerText);
				const quantity = parseInt(event.target.value);
				const totalCell = row.querySelector('.product-total');

				// Update the total for the row
				totalCell.innerText = (price * quantity).toFixed(2);

				// Optionally: Update the subtotal, shipping, and total dynamically
				updateCartTotals();
			});
		});
		function updateCartTotals() {
			let subtotal = 0;
			document.querySelectorAll('.product-total').forEach((cell) => {
				subtotal += parseFloat(cell.innerText);
			});
			const shippingRate = 50; // Fixed for now
			const total = subtotal + shippingRate;
			// Update the totals in the table
			document.querySelector('#subtotal').innerText = subtotal.toFixed(2);
			document.querySelector('#shippingRate').innerText = shippingRate.toFixed(2);
			document.querySelector('#total').innerText = total.toFixed(2);
		}
	</script>
