					<script>function updateQuantity(cartId, change) {
    const quantityInput = document.getElementById(`quantity-${cartId}`);
    const currentQuantity = parseInt(quantityInput.value);
    let newQuantity = currentQuantity + change;

  
    if (newQuantity > 10) {
        Swal.fire({
            icon: "error",
            title: "Limit Exceeded",
            text: "You cannot add more than 10 items of this product.",
            confirmButtonColor: "#d33",
            confirmButtonText: "Okay",
        });
        return;
    } else if (newQuantity < 1) {
        Swal.fire({
            icon: "warning",
            title: "Minimum Quantity Reached",
            text: "You must have at least 1 item in your cart.",
            confirmButtonColor: "#d33",
            confirmButtonText: "Okay",
        });
        return;
    }

    
    fetch(`/cart/${cartId}/getProductStock`)
        .then((response) => response.json())
        .then((data) => {
            const availableStock = data.stock;

            if (newQuantity > availableStock) {
                Swal.fire({
                    icon: "error",
                    title: "Stock Limit Exceeded",
                    text: `Only ${availableStock} items are available in stock.`,
                    confirmButtonColor: "#d33",
                    confirmButtonText: "Okay",
                });
                return;
            }

            quantityInput.value = newQuantity;

        
            fetch(`/cart/${cartId}/updateQuantity`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ quantity: newQuantity }),
            })
                .then((response) => response.json())
                .then((data) => {
                    if (data.success) { 
                       
                        const row = quantityInput.closest('tr');
                        const price = parseFloat(row.querySelector('.product-price').innerText);
                        const totalCell = row.querySelector('.product-total');
                        totalCell.innerText = data.total
						document.getElementById('cellsubtotal').innerText = data.subtotal

                     
                        updateCartTotals();
