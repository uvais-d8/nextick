	<script>
		document.getElementById("orderForm").addEventListener("submit", async function (event) {
			event.preventDefault(); // Prevent default form submission

			const form = event.target;

			// Collect form data
			const formData = {
				firstname: form.elements['firstname'].value,
				lastname: form.elements['lastname'].value,
				email: form.elements['email'].value,
				address: form.elements['address'].value,
				phone: form.elements['phone'].value,
				pincode: form.elements['pincode'].value,
				district: form.elements['district'].value,
				paymentMethod: form.elements['paymentMethod'].value,
				place: form.elements['place'].value,
				city: form.elements['city'].value,
				subtotal: parseFloat(document.querySelector('input[name="subtotal"]').value),
				shippingRate: parseFloat(document.querySelector('input[name="shippingRate"]').value),
				total: parseFloat(document.querySelector('input[name="total"]').value),
				addressId: document.getElementById('addressId').textContent,
			};

			if (formData.paymentMethod === "razorpay") {
				// Existing Razorpay logic remains unchanged
				try {
					const response = await fetch('/create-razorpay-order', {
						method: 'POST',
						headers: { 'Content-Type': 'application/json' },
						body: JSON.stringify(formData),
					});
					const order = await response.json();

					const options = {
						key: "rzp_test_27cbwJ6wd0CuiQ", // Replace with your Razorpay API Key
						amount: order.amount, // Amount in paisa
						currency: order.currency,
						name: "Your Store Name",
						description: "Payment for your order",
						order_id: order.id,
						handler: async function (response) {
							const verifyResponse = await fetch('/verify-razorpay-payment', {
								method: 'POST',
								headers: { 'Content-Type': 'application/json' },
								body: JSON.stringify({
									paymentId: response.razorpay_payment_id,
									orderId: response.razorpay_order_id,
									signature: response.razorpay_signature,
								}),
							});
							const verifyResult = await verifyResponse.json();

							if (order.success) {
								Swal.fire({
									title: 'Success!',
									text: 'Payment successful! Order placed.',
									icon: 'success',
									confirmButtonText: 'OK',
								}).then(() => {
									window.location.href = '/orderss';
								});
							} else {
								Swal.fire({
									title: 'Payment Verification Failed',
									text: 'Your payment could not be verified.',
									icon: 'error',
									confirmButtonText: 'Retry',
								});
							}
						},
						prefill: {
							name: `${formData.firstname} ${formData.lastname}`,
							email: formData.email,
							contact: formData.phone,
						},
						theme: {
							color: "#F37254",
						},
					};

					const rzp = new Razorpay(options);
					rzp.open();
				} catch (error) {
					console.error('Error during Razorpay payment:', error);
					Swal.fire({
						title: 'Error',
						text: 'Payment could not be initiated.',
						icon: 'error',
						confirmButtonText: 'Retry',
					});
				}
			} else {
				// New: Handle COD and UPI
				try {
					const response = await fetch('/placeOrder', {
						method: 'POST',
						headers: { 'Content-Type': 'application/json' },
						body: JSON.stringify(formData),
					});
					const result = await response.json();

					if (result.success) {
						Swal.fire({
							title: 'Order Placed!',
							text: 'Your order has been successfully placed.',
							icon: 'success',
							confirmButtonText: 'OK',
						}).then(() => {
							window.location.href = '/orderss';
						});
					} else {
						Swal.fire({
							title: 'Order Failed',
							text: result.message || 'Something went wrong while placing your order.',
							icon: 'error',
							confirmButtonText: 'Retry',
						});
					}
				} catch (error) {
					console.error('Error placing order:', error);
					Swal.fire({
						title: 'Error',
						text: 'Order could not be placed.',
						icon: 'error',
						confirmButtonText: 'Retry',
					});
				}
			}
		});
	</script>
	

