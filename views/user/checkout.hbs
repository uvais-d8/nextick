	<script>
		document.getElementById('orderForm').addEventListener('submit', async function (event) {
			event.preventDefault(); // Prevent default form submission
			console.log('hai')

			const items = Array.from(document.querySelectorAll('.order-details-body tr')).map(row => ({
				name: row.querySelector('.item-name').textContent,
				price: parseFloat(row.querySelector('.item-price').textContent),
				quantity: parseInt(row.querySelector('.item-quantity').textContent),
				total: parseFloat(row.querySelector('.item-total').textContent),
				images: row.querySelector('.item-image').textContent,
			}));

			const orderData = {
				items: items,
				paymentMethod: document.getElementById('paymentMethod').value,
				subtotal: parseFloat(document.querySelector('input[name="subtotal"]').value),
				shippingRate: parseFloat(document.querySelector('input[name="shippingRate"]').value),
				total: parseFloat(document.querySelector('input[name="total"]').value),
				addressId: document.getElementById('addressId').textContent,
			};

			console.log(orderData)

			try {
				const response = await fetch('/placeOrder', {
					method: 'POST',
					headers: { 'Content-Type': 'application/json' },
					body: JSON.stringify(orderData)
				});

				const result = await response.json();
				if (result.success) {
					Swal.fire({
						title: 'Success!',
						text: 'Your order placed successfully.',
						icon: 'success',
						confirmButtonText: 'OK'
					}).then(() => {
						// Redirect to orders page after clicking "OK"
						window.location.href = '/orderss';
					});
				} else {
					Swal.fire({
						title: 'Error!',
						text: 'Failed to place order. Please try again.',
						icon: 'error',
						confirmButtonText: 'OK'
					}).then(() => {
						// Redirect to orders page after clicking "OK"
						window.location.href = '/checkout';
					});;
				}
			} catch (error) {
				console.error('Error placing order:', error);
			}

		});
	</script>

