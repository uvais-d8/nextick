	<script>
		async function handleCoupon(event) {
			event.preventDefault();

			const couponCodeInput = document.getElementById('couponCode');
			const submitButton = document.getElementById('couponSubmitButton');
			const couponCode = couponCodeInput.value.trim();
			const cartTotal = parseFloat(document.querySelector('input[name="total"]').value);

			if (submitButton.value === 'Apply Coupon') {
				// Apply the coupon
				if (!couponCode) {
					Swal.fire({
						title: "Oops..Error",
						text: "the coupon code field is empty",
						icon: "error",
						confirmButtonText: "OK",
					});
					return;
				}

				try {
					const response = await fetch('/applycoupon', {
						method: 'POST',
						headers: { 'Content-Type': 'application/json' },
						body: JSON.stringify({ couponCode, cartTotal }),
					});

					const data = await response.json();

					if (response.ok) {
						const discount = data.discount;
						const newTotal = data.newTotal;

						// Update displayed total and discount
						document.querySelector('.total-data .total').textContent = `₹${newTotal.toFixed(2)}`;
						document.querySelector('.discount-section').textContent = `Discount Applied: ₹${discount.toFixed(2)}`;
						document.querySelector('.discount-section').style.display = 'block';
 
						document.querySelector('input[name="total"]').value = newTotal.toFixed(2);
 
						submitButton.value = 'Remove Coupon';
						couponCodeInput.readOnly = true;  
					} else {
						Swal.fire({
							title: "Oops..Error",
							text: (data.message),
							icon: "error",
							confirmButtonText: "OK",
						});
					}
				} catch (error) {
					console.error('Error applying coupon:', error);
					alert('An error occurred while applying the coupon.');
				}
			} else if (submitButton.value === 'Remove Coupon') {
				// Remove the coupon
				try {

					const response = await fetch(`/removeCoupon/${couponCode}`, {
						method: 'POST',
						headers: { 'Content-Type': 'application/json' },
						body: JSON.stringify({ cartTotal }), // Send cart total if necessary
					});

					const data = await response.json();

					if (response.ok) {
						const originalTotal = data.originalTotal;

						// Reset displayed total and discount section
						document.querySelector('.total-data .total').textContent = `₹${originalTotal.toFixed(2)}`;
						document.querySelector('.discount-section').textContent = '';
						document.querySelector('.discount-section').style.display = 'none';

						// Update hidden total input
						document.querySelector('input[name="total"]').value = originalTotal.toFixed(2);

						// Reset coupon input and button
						couponCodeInput.value = '';
						couponCodeInput.readOnly = false;
						submitButton.value = 'Apply Coupon';
					} else {
						alert(data.message || 'Failed to remove coupon.');
					}
				} catch (error) {
					console.error('Error removing coupon:', error);
					alert('An error occurred while removing the coupon.');
				}
			}
		}

		document.getElementById('couponForm').addEventListener('submit', handleCoupon);
