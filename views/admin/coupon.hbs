<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WATCHES PREMIUM</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>


    <link rel="stylesheet" href="/admin/products.css">
</head>

<body>
    <div class="dashboard">
        <aside class="sidebar">
            <div class="logo">WATCH PREMIUM</div>
          <nav>
                <a class="a" href="/admin/dashboard">
                    <div class="nav-item">
                        <i class="bi bi-house"></i> Dashboard
                    </div>
                </a>
                <a class="a" href="/admin/userpage">
                    <div class="nav-item">
                        <i class="bi bi-people"></i> Users
                    </div>
                </a>
                <a class="a" href="/admin/products">
                    <div class="nav-item">
                        <i class="bi bi-box-seam"></i> Products
                    </div>
                </a>
                <a class="a" href="/admin/category">
                    <div class="nav-item">
                        <i class="bi bi-tag"></i> Category
                    </div>
                </a>
                <a class="a" href="/admin/orders">
                    <div class="nav-item">
                        <i class="bi bi-cart-check"></i> Orders
                    </div>
                </a>
                <a class="a" href="/admin/inventory">
                    <div class="nav-item">
                        <i class="bi bi-boxes"></i> Inventory
                    </div>
                </a>
                <a class="a" href="/admin/coupon">
                    <div class="nav-item active">
                        <i class="bi bi-ticket-detailed"></i> Coupons
                    </div>
                </a>
                <a class="a" href="/admin/offer">
                    <div class="nav-item">
                        <i class="bi bi-gift"></i> Offers
                    </div>
                </a>
                <a class="a" href="/admin/salesreport">
                    <div class="nav-item">
                        <i class="bi bi-bar-chart-line"></i> Sales Report
                    </div>
                </a>

            </nav>
        </aside>
        <main class="main-content">
            <div class="controls">
                <h1 style="font-size:43px;">COUPON MANAGEMENT</h1>
            </div>
            <div><form >
            </form>
            </div>
                   <div class="controls">
            
                <form method="get"  action="/admin/addcoupon"><button style="background-color: rgb(3, 139, 39);"  class="sort-button">ADD
                    COUPON (products)</button>
                </form><form method="get" action="/admin/addcoupons"><button style="background-color: rgb(3, 139, 39);" class="sort-button">ADD
                    COUPON (category)</button></form>
            </div>  

            <table>
                <thead>
                    <tr>
                        <th>Coupon Code</th>
                        <th>Discount Type</th>
                        <th>Discount Value</th>
                        <th>Products</th>
                        <th>Categories</th>
                        <th>MinCart Value</th>
                        <th>Usage Limit</th>
                        <th>Expiry Date</th>
                        <th>Description</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each coupons}}
                    <tr>
                        <td>#{{this.CouponCode}}</td>
                        <td>{{this.DiscountType}}</td>
                        <td>{{this.DiscountValue}}</td>
                        <td>{{this.Products}}</td>  
                        <td>{{this.Categories}}</td>
                        <td>{{this.MinimumCartValue}}</td>
                        <td>{{this.UsageLimit}}</td>
                        <td>{{formatDate this.ExpiryDate}}</td> <!-- Use the formatDate helper -->
                        <td>{{this.Description}}</td>
                        <td>
                              {{#if this.Status}}
                            <form action="/admin/coupon/unlist/{{this._id}}" method="POST">
                                <button
                                    style="color:white;background-color: rgba(0, 174, 0, 0.671);height:40px;width:100px"
                                    class="action-button unblock-button">
                                    LISTED
                                </button>
                            </form>
                            {{else}}
                            <form action="/admin/coupon/list/{{this._id}}" method="POST">
                                <button style="color:white;background-color: rgba(255, 0, 0, 0.622);height:40px;"
                                    class="action-button block-button">
                                    UNLISTED
                                </button>
                            </form>
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>


           
<!-- Pagination -->
<nav aria-label="Page navigation">
  <ul class="pagination justify-content-center pages custom-pagination">
    <!-- Show the "Previous" button if there is a previous page -->
    {{#if previousPage}}
      <li class="page-item">
        <a class="page-link" href="?page={{previousPage}}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {{/if}}

    <!-- Generate page numbers -->
    {{#each (range 1 totalPages)}}
      <li class="page-item {{#if (isEqual this ../currentPage)}}active{{/if}}">
        <a class="page-link" href="?page={{this}}">{{this}}</a>
      </li>
    {{/each}}

    <!-- Show the "Next" button if there is a next page -->
    {{#if nextPage}}
      <li class="page-item">
        <a class="page-link" href="?page={{nextPage}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{/if}}
  </ul>
</nav>
        </main>
    </div>
</body>

</html>