<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WATCHES PREMIUM</title>


    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <link rel="shortcut icon" type="image/png" href="/assets/img/favicon.png">

    <link rel="stylesheet" href="/admin/products.css">
</head>

<body>
    <div class="dashboard">
        <aside class="sidebar">
            <div class="logo">WATCH PREMIUM</div>
            <nav>
                <a class="a" href="/admin/dashboard">
                    <div class="nav-item">Dashboard</div>
                </a>
                <a class="a" href="/admin/userpage">
                    <div class="nav-item">Users</div>
                    <a class="a" href="/admin/products">
                        <div class="nav-item">Products</div>
                    </a>
                    <a class="a" href="/admin/category">
                        <div class="nav-item">Category</div>
                    </a>
                    <a class="a" href="/admin/orders">
                        <div class="nav-item">Orders</div>
                    </a>
                    <a class="a" href="/admin/inventory">
                        <div class="nav-item active">Inventory</div>
                    </a>
                    <a class="a" href="/admin/coupon">
                        <div class="nav-item">coupons</div>
                    </a>
                    <a class="a" href="/admin/dashboard">
                        <div class="nav-item">Offers</div>
                    </a>
                    <a class="a" href="/admin/dashboard">
                        <div class="nav-item">Sales Report</div>
                    </a>
            </nav>
        </aside>
        <main class="main-content">
            <div class="controls">
                <h1 style="font-size:43px;">INVENTORY MANAGEMENT</h1>

            </div>
            <table>
                <tr>
                    <input id="messageInput" style="color:red; background-color: #0a0d1be4; border-width: 0px"
                        type="text" value="{{message}}">
                </tr>

                <script>
                    // Check if the message exists
                    if (document.getElementById("messageInput")) {
                        setTimeout(() => {
                            document.getElementById("messageInput").style.display = "none";
                        }, 2000); // 2000 milliseconds = 2 seconds
                    }
                </script>
                <thead>
                    <tr>

                        <th>Product Name</th>
                        <th>Stock</th>
                        <th>Price</th>
                        <th>Status</th>
                        <th>action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each products}}

                    <tr>
                        <td>{{this.name}}</td>
                        <td>{{this.stock}}</td>
                        <td>$ {{this.price}}</td>
                        {{!-- <td><img src="/{{this.images.[0]}}" alt="{{this.name}}"
                                style="width: 100px; height: 100px;">
                        </td> --}}
                        {{!-- <td>{{this._id}}</td> --}}
                        {{!-- <td>{{this.category}}</td> --}}
                        <td>
                            <span class="status {{#if this.islisted}}active{{else}}non active{{/if}}">
                                {{#if this.islisted}}active{{else}}non active{{/if}}
                            </span>
                        </td>
                        <td>
                            <button type="button" class="btn btn-"
                                style="background-color: rgba(209, 139, 9, 0.849);COLOR:WHITE;font-size:14px"
                                data-bs-toggle="modal" data-id="{{this._id}}" data-bs-target="#staticBackdrop">
                                EDIT
                            </button>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>
            <div class="swipe-indicator">
                < swipe>
            </div>
        </main>
    </div>

    <!-- Button trigger modal -->


    <!-- Modal -->
    <div style="background-color: #0000009d;" class="modal fade" id="staticBackdrop" data-bs-backdrop="static"
        data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="staticBackdropLabel">Modal title</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>

                <div class="modal-body">
                    <div class="form-container">
                        <h2>Edit Product Inventory</h2>
                        {{#each products}}

                        <form action="/admin/editinventory/{{this._id}}" method="post"> {{/each}}

                            <div class="form-group">
                                <label for="name">Product Name</label>
                                <input type="text" id="name" name="name" value="{{this.name}}" required>
                            </div>
                            <div class="form-group">
                                <label for="stock">Stock Quantity</label>
                                <input type="number" id="stock" name="stock" value="{{this.stock}}" required>
                            </div>
                            <button type="submit" class="submit-btn">Update Product</button>
                        </form>
                        <style>
                            .form-container {
                                max-width: 500px;
                                color: white;
                                margin: auto;
                                padding: 20px;
                                border: 1px solid #000000;
                                border-radius: 5px;
                                background-color: #000000c8;
                                box-shadow: 0 2px 9px rgba(255, 255, 255, 0.791);
                            }

                            .form-container h2 {
                                text-align: center;
                            }

                            .form-group {
                                margin-bottom: 15px;
                            }

                            label {
                                font-weight: bold;
                                display: block;
                            }

                            input[type="text"],
                            input[type="number"] {
                                width: 100%;
                                padding: 8px;
                                border: 1px solid #ccc;
                                border-radius: 4px;
                            }

                            .submit-btn {
                                width: 100%;
                                padding: 10px;
                                background-color: #007bff;
                                color: white;
                                border: none;
                                border-radius: 4px;
                                cursor: pointer;
                            }

                            .submit-btn:hover {
                                background-color: #0056b3;
                            }
                        </style>
                    </div>
                </div>
                {{!-- <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Understood</button>
                </div> --}}
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
</body>


</html>