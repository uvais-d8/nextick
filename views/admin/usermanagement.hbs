<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WATCHES PERMIUM</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
	<link rel="shortcut icon" type="image/png" href="/assets/img/favicon.png">

    <link rel="stylesheet" href="/admin/products.css">

</head>

<body>

    <div class="dashboard">
        <aside class="sidebar">
            <div style="color: white;" class="logo">WATCH PREMIUM</div>
            <nav>
                <a class="a" href="/admin/dashboard">
                    <div class="nav-item">Dashboard</div>
                </a>
                <a class="a" href="/admin/userpage">
                    <div class="nav-item active">Users</div>
                    <a class="a" href="/admin/products">
                        <div class="nav-item">Products</div>
                    </a>
                    <a class="a" href="/admin/category">
                        <div class="nav-item">Category</div>
                    </a>
                    <a class="a" href="/admin/orders">
                        <div class="nav-item">Orders</div>
                    </a>
                    <a class="a" href="/admin/inventory">
                        <div class="nav-item">Inventory</div>
                    </a>
                    <a class="a" href="/admin/coupon">
                        <div class="nav-item">coupons</div>
                    </a>
                    <a class="a" href="/admin/offer">
                        <div class="nav-item">Offers</div>
                    </a>
                    <a class="a" href="/admin/salesreport">
                        <div class="nav-item">Sales Report</div>
                    </a>
            </nav>
        </aside>
        <main class="main-content">
            <h1 style="font-size:43px;">USER MANAGEMENT</h1>
            <div style="height: 50px;" class="controls">
                
            </div>
            <table>
                <thead>
                    <tr>
                        <th>Id:</th>
                        <th>Name</th>
                        <th>Email Address</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each users}}
                    <tr>
                        <td>{{this._id}}</td>
                        <td>{{this.name}}</td>
                        <td>{{this.email}}</td>
                        <td>
                            <span class="status {{#if this.blocked}}blocked{{else}}active{{/if}}">
                                {{#if this.blocked}}blocked{{else}} active{{/if}}
                            </span>
                        </td>
                        <td>
                            {{#if this.blocked}}
                            <button class="action-button unblock-button" style="width: 90px;background-color: rgba(106, 0, 0, 0.828);color:white"
                                onclick="unblockUser('{{this._id}}')">Unblock</button>
                            {{else}}
                            <button class="action-button block-button" style="width: 90px;background-color: rgba(39, 106, 0, 0.828);color:white"
                                onclick="blockUser('{{this._id}}')">Block</button>
                            {{/if}}
                        </td>
                    </tr>
                    {{/each}}
                </tbody>

            </table>

            <nav aria-label="Page navigation">
  <ul class="pagination justify-content-center pages custom-pagination">

    <!-- Show the "Previous" button if there is a previous page -->
    {{#if previousPage}}
      <li class="page-item">
        <a class="page-link" href="?page={{previousPage}}" aria-label="Previous">
          <span aria-hidden="true">&laquo;</span>
        </a>
      </li>
    {{/if}}

    <!-- Generate page numbers -->
    {{#each (range 1 totalPages)}}
      <li class="page-item {{#if (isEqual this ../currentPage)}}active{{/if}}">
        <a class="page-link" href="?page={{this}}">{{this}}</a>
      </li>
    {{/each}}

    <!-- Show the "Next" button if there is a next page -->
    {{#if nextPage}}
      <li class="page-item">
        <a class="page-link" href="?page={{nextPage}}" aria-label="Next">
          <span aria-hidden="true">&raquo;</span>
        </a>
      </li>
    {{/if}}

  </ul>
</nav>



        </main>
    </div>


    <script>
        function blockUser(userId) {
            fetch(`/admin/block/${userId}`, { method: 'POST' })
                .then(response => window.location.reload())
                .catch(err => console.error("Error blocking user:", err));
        }

        function unblockUser(userId) {
            fetch(`/admin/unblock/${userId}`, { method: 'POST' })
                .then(response => window.location.reload())
                .catch(err => console.error("Error unblocking user:", err));
        }
    </script>

</body>

</html>