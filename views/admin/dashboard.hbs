                <script>
                    document.addEventListener("DOMContentLoaded", function () {
                        const filterElement = document.getElementById("filter");

                        // Set default value for filter and initialize chart
                        if (filterElement) {
                            filterElement.value = "yearly";
                            updateSalesChart();
                        }

                        // Attach change event listener to the filter dropdown
                        filterElement.addEventListener("change", updateSalesChart);
                    });

                    let salesChart;

                    async function updateSalesChart() {
                        const filter = document.getElementById("filter").value;

                        try {
                            // Fetch data from the backend
                            const response = await fetch(`/admin/sales-data?filter=${filter}`);
                            const result = await response.json();

                            if (response.ok) {
                                const labels = result.labels;
                                const data = result.totalPrices;

                                // Destroy existing chart if it exists
                                if (salesChart) {
                                    salesChart.destroy();
                                }

                                // Create new chart
                                const ctx = document.getElementById("salesChart").getContext("2d");
                                salesChart = new Chart(ctx, {
                                    type: "line",
                                    data: {
                                        labels: labels,
                                        datasets: [{
                                            label: `Total Sales (₹ 9999${netSale})`,
                                            data: data,
                                            backgroundColor: "rgba(54, 162, 235, 0.2)",
                                            borderColor: "rgba(54, 162, 235, 1)",
                                            borderWidth: 1,
                                            fill: true,
                                        }],
                                    },
                                    options: {
                                        responsive: true,
                                        maintainAspectRatio: false,
                                        scales: {
                                            y: {
                                                beginAtZero: true,
                                                title: {
                                                    display: true,
                                                    text: `Total Sales (₹ ${netSale})`,
                                                },
                                            },
                                            x: {
                                                title: {
                                                    display: true,
                                                    text: filter === "yearly" ? "Years" : filter === "monthly" ? "Months" : "Weeks",
                                                },
                                            },
                                        },
                                    },
                                });
                            } else {
                                console.error("Error:", result.error);
                            }
                        } catch (error) {
                            console.error("Error loading chart data:", error);
                        }
                    }
                </script>

